{
    "name": "Lolesports Standings",
    "description": "An unofficial Chrome extension that shows the upcoming League of Legends matches from the LCK",
    "version": "1.0.0",

    "permissions": [
        "activeTab"
    ],

    "icons": { 
        "400": "images/icon.png" 
     },

    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },

    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self' ",
    "manifest_version": 2
}